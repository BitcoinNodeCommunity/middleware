{
  "name": "middleware",
  "version": "0.0.1",
  "description": "Middleware for Bitcoin Nodes",
  "author": "Aaron Dewes <aaron.dewes@web.de>",
  "scripts": {
    "build": "tsc",
    "lint": "eslint --fix . && prettier -w .",
    "start": "node --experimental-json-modules ./bin/www.mjs",
    "build-types": "cd resources && protoc --plugin=../node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=../lnrpc --ts_proto_opt=esModuleInterop=true --ts_proto_opt=outputServices=generic-definitions --ts_proto_opt=forceLong=string rpc.proto walletunlocker.proto stateservice.proto"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.1.1",
    "@runcitadel/bitcoin-rpc": "^0.0.4",
    "@runcitadel/fs": "^1.0.1",
    "@runcitadel/utils": "^0.9.0",
    "@types/koa__router": "^8.0.8",
    "bech32": "^2.0.0",
    "big.js": "^6.1.1",
    "bolt11": "^1.3.2",
    "crypto-js": "^4.1.1",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "koa-morgan": "^1.0.1",
    "koa-passport": "^4.1.4",
    "long": "^5.0.0",
    "nice-grpc": "^1.0.4",
    "node-fetch": "3.0.0",
    "passport-jwt": "^4.0.0",
    "protobufjs": "^6.11.2",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^4",
    "@types/koa": "^2.13.4",
    "@types/koa-morgan": "^1.0.5",
    "@types/koa-passport": "^4.0.2",
    "@types/koa__cors": "^3.0.3",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.6",
    "@types/passport-jwt": "^3.0.6",
    "@types/validator": "^13.6.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1",
    "ts-proto": "^1.83.2",
    "typescript": "^4.4.4"
  },
  "type": "module",
  "packageManager": "yarn@3.0.2"
}
